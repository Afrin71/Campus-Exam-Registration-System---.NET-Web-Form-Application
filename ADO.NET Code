namespace CampusExamRegistration
{
    public partial class CampusExamRegistration : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {
            Rvalid.MinimumValue = DateTime.MinValue.ToString("dd-MM-yyyy");
            Rvalid.MaximumValue = DateTime.Now.ToString("dd-MM-yyyy");
        }
        protected void cvAgree_ServerValidate(object source, ServerValidateEventArgs args)
        {
            args.IsValid = chkAgree.Checked;
        }

        protected void CVPhoneNumber_ServerValidate(object source, ServerValidateEventArgs args)
        {
            args.IsValid = (args.Value.Length < 11);
        }
        protected void cvExamDate_ServerValidate(object source, ServerValidateEventArgs args)
        {
            // Check if a date is selected
            if (calExamDate.SelectedDate == DateTime.MinValue)
            {
                args.IsValid = false; // No date selected
            }
            else
            {
                args.IsValid = true; // Date is selected
            }
        }

        protected void btnSubmit_Click(object sender, EventArgs e)
        {
            if (Page.IsValid)
            {
                Response.Write("Saved");
            }
        }

        
        protected void btnClear_Click(object sender, EventArgs e)
        {
            // Clear TextBoxes
            txtCandidateName.Text = "";
            txtRollNumber.Text = "";
            txtDOB.Text = "";
            txtCollegeName.Text = "";
            txtEmailId.Text = "";
            txtPhoneNumber.Text = "";

            // Reset DropDownLists to default ("--Select--")
            ddlDomain.SelectedIndex = 0;
            
            ddlExamCenter.SelectedIndex = 0;
            ddlAssessments.SelectedIndex = 0;

            // Uncheck the checkbox
            chkAgree.Checked = false;

            // Optionally clear validation messages
            Page.Validate();
        }
    }
    
}
